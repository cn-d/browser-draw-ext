{
  "manifest_version": 2,
  "name": "Browser Draw",
  "description": "Draw on web pages.",
  "version": "1.0",
  "icons": { 
    "128": "assets/grid_logo_no_circle_128.png" 
  },
  "browser_action": {
    "default_icon": "assets/grid_logo_no_circle.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["p5.js","p5.dom.js"]
  }],
  "permissions": [
    "activeTab",
    "storage"
  ]
}
